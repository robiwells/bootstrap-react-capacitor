{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "views/*": ["views/*"],
      "components/*": ["components/*"]
    },
    "target": "ES6",
    "module": "CommonJS",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}